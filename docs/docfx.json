{
  "build": {
    "content": [
      {
        "exclude": [
          "_site/**"
        ],
        "files": [
          "**/*.{md,yml}"
        ]
      },
      {
        "files": [
          "README.md"
        ],
        "src": "../"
      }
    ],
    "globalMetadata": {
      "_appName": "OPA C# SDK",
      "_appTitle": "OPA C# SDK",
      "_enableSearch": true,
      "pdf": false
    },
    "output": "_site",
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "template": [
      "default",
      "modern"
    ]
  },
  "metadata": [
    {
      "dest": "api",
      "src": [
        {
          "files": [
            "*.csproj"
          ],
          "src": "../src/OpenPolicyAgent.Opa"
        }
      ]
    }
  ]
}